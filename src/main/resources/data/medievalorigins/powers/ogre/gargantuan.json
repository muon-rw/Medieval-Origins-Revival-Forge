{
	"type": "origins:multiple",
	"gargantuan_callback": {
		"type": "origins:action_on_callback",
		"entity_action_chosen": {
			"type": "origins:execute_command",
			"command": "function medievalorigins:mdvlorigins/ogre_callon"
		},
		"entity_action_lost": {
			"type": "origins:execute_command",
			"command": "function medievalorigins:mdvlorigins/ogre_callback"
		},
		"execute_chosen_when_orb": true
	},
	"gargantuan_constant": {
		"type": "origins:action_over_time",
		"entity_action": {
			"type": "origins:execute_command",
			"command": "execute unless entity @s[pehkui.scale_nbt={\"pehkui:scale_data_types\":{\"pehkui:height\":{scale:1.35f}}}] run function medievalorigins:mdvlorigins/ogre_callon"
		},
		"interval": 50
	}
}