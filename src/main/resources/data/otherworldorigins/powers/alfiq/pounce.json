{
    "type": "origins:multiple",
    "jump": {
        "type": "apugli:action_on_jump",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:add_velocity",
                    "y": 0.2,
                    "space": "world"
                },
                {
                    "type": "origins:add_velocity",
                    "z": 1.5,
                    "space": "local"
                },
                {
                    "type": "origins:play_sound",
                    "sound": "otherworldorigins:dash",
                    "pitch": 0.7,
                    "category": "player"
                },
                {
                    "type": "origins:modify_resource",
                    "resource": "*:*_meter",
                    "modifier": {
                        "operation": "set_total",
                        "value": 0
                    }
                },
                {
                    "type": "origins:modify_resource",
                    "resource": "*:*_cooldown",
                    "modifier": {
                        "operation": "set_total",
                        "value": 50
                    }
                },
                {
                    "type": "origins:grant_power",
                    "power": "otherworldorigins:alfiq/pounce_temp",
                    "source": "apoli:command"
                },
                {
                    "type": "origins:grant_power",
                    "power": "otherworldorigins:alfiq/pounce_revoker",
                    "source": "apoli:command"
                }
            ]
        },
        "hud_render": {
            "should_render": false
        },
        "cooldown": 1,
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_meter",
            "comparison": ">=",
            "compare_to": 38
        }
    },
    "meter": {
        "type": "origins:resource",
        "min": 0,
        "max": 40,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 7,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_meter",
                "comparison": ">",
                "compare_to": 0
            }
        },
        "max_action": {
            "type": "apoli:play_sound",
            "sound": "minecraft:block.respawn_anchor.charge",
            "volume": 0.1,
            "pitch": 2
        }
    },
    "cooldown": {
        "type": "origins:resource",
        "min": 0,
        "max": 50,
        "start_value": 0,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 1,
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_cooldown",
                "comparison": ">",
                "compare_to": 0
            }
        }
    },
    "tick_cooldown": {
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_cooldown",
            "comparison": ">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:modify_resource",
            "resource": "*:*_cooldown",
            "modifier": {
                "operation": "add_base_early",
                "value": -1
            }
        },
        "interval": 2
    },
    "charge_meter": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_meter",
            "change": 1
        },
        "rising_action": {
            "type": "origins:execute_command",
            "command": "scale set pehkui:visibility 0.5 @s"
        },
        "falling_action": {
            "type": "origins:execute_command",
            "command": "scale reset pehkui:visibility @s"
        },
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:moving",
                    "inverted": true
                },
                {
                    "type": "origins:sneaking"
                }
            ]
        }
    },
    "drain_meter": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_meter",
            "change": -1
        },
        "interval": 1,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                },
                {
                    "type": "origins:sneaking"
                },
                {
                    "type": "origins:moving",
                    "inverted": true
                }
            ],
            "inverted": true
        }
    }
}